<h1>Listing fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fieldtype</th>
      <th>Validationregex</th>
      <th>Required</th>
      <th>Errormessage</th>
      <th>Order</th>
      <th>Step</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.fieldType %></td>
        <td><%= field.validationRegex %></td>
        <td><%= field.required %></td>
        <td><%= field.errorMessage %></td>
        <td><%= field.order %></td>
        <td><%= field.step %></td>
        <td><%= field.value %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

